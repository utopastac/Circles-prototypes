- content_for :title, "Onboarding"
- @no_tab_bar = true
- @body_id = "onboarding"
- @body_class = "blue"
- @inner_class = "nav-bar"

- content_for :nav_bar do
  #nav-bar
    = link_to :back do
      #back
    .title About you
    .actions
      = button_to "Next", new_circle_path, :id => "next-button", :method => "get"

#question-holder
  %section{:id => "age"}
    .age-question
      %h4 Your name
      %input{:type => "text", :id => "name"}
      = image_tag "illustrations/7.png", :style => "right: -2.2rem; top: -2.5rem;", :class => "illustration"
    .age-question
      %h4 Your gender
      %ul.tabs.tab-behaviour
        %li Male
        %li Female
      %input{:type => "text", :placeholder => "Or enter your gender identity"}
      .optional optional
    .age-question
      %h4 Your age
      %input{:type => "text", :pattern => "[0-9]*"}
      .optional optional

:javascript
  var input = document.getElementById("name");
  var next = document.getElementById("next-button");
  input.focus();
  input.addEventListener("input", function(){
    if(!next.classList.contains("active")){
      next.classList.add("active");
    }
  });
