- content_for :title, "New Circle - add a photo"
- @no_tab_bar = true
- @body_id = "new-circle-photo"
- @body_class = "blue"
- @inner_class = "nav-bar"

- content_for :nav_bar do
  #nav-bar
    = link_to :back do
      #back
    .title Add a photo
    .actions
      = button_to "Skip", ob_age_path, :id => "next-button", :method => "get", :class => "active"


#question-holder
  .success-toast Circle created!
  .question
    .question-title
      %h4 Do you want to add a photo so that people can recognise you?
      
.white-panel
  = image_tag "icons/photo-icon.png", :id => "choose-a-photo", :class => "sheet-launcher"

- content_for :bottom_sheet do
  %ul
    %li Add from Facebook
    %li Choose from photo library
