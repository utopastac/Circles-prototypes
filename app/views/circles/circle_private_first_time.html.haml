- content_for :title, "Your circle"
- @body_id = "your-circle"
- @body_class = "blue"
- @inner_class = "nav-bar tab-bar"
- @tab_highlight = "circles-tab expression-tab"

- content_for :nav_bar do
  #nav-bar
    = link_to circle_switcher_path do
      #circle-switcher-control Your circle
    .title
      = link_to status_path do
        = image_tag "icons/neutral-face.png"
    .actions
      = link_to circle_switcher_path do
        = image_tag "icons/activity-icon.png"

      = link_to circle_switcher_path do
        = image_tag "icons/dots-icon.png"

#circle-nav-tabs
  %ul
    %li
      = link_to "Feed", circle_first_time_inner_path
    %li.active 
      = link_to "Member chat", circle_private_path

#chat
  /.alert Peter hasn't left his house in 28 hours

  .day
