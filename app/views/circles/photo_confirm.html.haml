- content_for :title, "Confirm photo"
- @no_tab_bar = true
- @body_id = "confirm-photo"
- @body_class = "blue"
- @inner_class = "nav-bar"

- link = session[:photo_link] ? session[:photo_link] : circle_first_time_path

- content_for :nav_bar do
  #nav-bar
    = link_to :back do
      #back
    .title Confirm photo
    .actions
      = button_to "Save", link, :id => "next-button", :method => "get", :class => "active"


#question-holder
  %section
    .profile-image.large{:style => "background-image: url(#{image_path "faces/3.jpg"})"}

.white-panel
  %h4 Are you happy with this photo?
  = button_to "Save photo", link, :method => "get"
  = button_to "Choose another", photo_chooser_path, :method => "get", :class => 'blank'
  = image_tag "illustrations/12.png", :style => "right: 10px; top: -7.5rem;", :class => "illustration"
